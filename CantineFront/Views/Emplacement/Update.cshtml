@model  CantineFront.ViewModels.EmplacementViewModel
@section Styles{
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link href="~/lib/bootstrap-fileinput/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/createCategorie.css" />
}
@{
    string actif = (Model.Emplacement?.Actif ?? false) ? "checked" : "";
}
<!-- book section -->
<section class="create-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="create-card">
                    <!-- Header -->
                    <div class="card-header">
                        <h2><i class="fas fa-edit me-2"></i>Modifier l'Emplacement</h2>
                        <div class="subtitle">Modifiez les informations de l'emplacement</div>
                    </div>

                    <div class="row g-0">
                        <!-- Form Section -->
                        <div class="col-lg-12">
                            <div class="form-container">
                                <form id="form">
                                    <input type="hidden" name="Id" value="@Model.Emplacement.Id" />

                                    <div class="row g-3">
                                        <div class="col-12 mb-3">
                                            <div class="form-group">
                                                <label class="form-label" for="EntrepriseId">
                                                    <i class="fas fa-building"></i> Entreprise
                                                </label>
                                                <select class="form-control w-100" name="EntrepriseId" id="EntrepriseId" required>
                                                    <option disabled selected>Sélectionnez une entreprise</option>
                                                    @if (Model.Entreprises != null)
                                                    {
                                                        foreach (var ent in Model.Entreprises)
                                                        {
                                                            <option value="@ent.Id" selected="@(ent.Id == Model.Department.EntrepriseId ? "selected" : null)">
                                                                @ent.Nom (@ent.Code)
                                                            </option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <!-- Nom du Emplacement -->
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label class="form-label" for="Name">
                                                    <i class="fas fa-tag"></i> Nom du Département
                                                </label>
                                                <input type="text"
                                                       class="form-control"
                                                       id="Name"
                                                       name="Name"
                                                       @* placeholder="Ex: BUreau, Ressources Humaines..." *@
                                                       value="@Model.Emplacement.Name"
                                                       required>
                                                <small class="form-text text-muted mt-2">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Modifiez le nom du département selon vos besoins
                                                </small>
                                            </div>
                                        </div>

                                        <!-- Statut Actif -->
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="actif" name="Actif" @actif>
                                                    <label class="form-check-label" for="actif">
                                                        <i class="fas fa-check-circle me-1"></i>Actif
                                                    </label>
                                                </div>
                                                <small class="form-text text-muted">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Un emplacement inactif ne sera pas disponible dans les sélections
                                                </small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="btn-group">
                                        <button class="btn-custom"
                                                id="btnUpdate"
                                                type="button"
                                                data-redirectroute="/Emplacement/List"
                                                data-url="/Emplacement/UpdateEmplacement">
                                            <i class="fas fa-save me-2"></i>Enregistrer les modifications
                                        </button>

                                        <button class="btn-back" type="button" onclick="history.back()">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>