<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion - Cuisinov</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css" />
    <link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />

</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="logo-section floating-element">
                <div class="logo-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <h1 class="app-name">CUISINOV</h1>
                <p class="app-tagline">Votre restaurant d'entreprise</p>
            </div>

            <form id="formLogin">
                <!-- Login Section -->
                <div id="loginSection">
                    <div class="form-group">
                        <label class="form-label" for="password">Nouveau Mot de Passe</label>
                        <div class="input-group">
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password"
                                   class="form-input"
                                   id="newPassword"
                                   name="newPassword"
                                   placeholder="Votre mot de passe">
                            <button type="button" class="password-toggle" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="password">Confirmer votre Mot de passe</label>
                        <div class="input-group">
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password"
                                   class="form-input"
                                   id="confirmPassword"
                                   name="confirmPassword"
                                   placeholder="Confirmez votre nouveau mot de passe">
                            <button type="button" class="password-toggle" id="toggleConfirmPassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="btn-login" id="btnChangePwd">
                        Reinitialiser
                    </button>
                </div>

            </form>
        </div>
    </div>
  
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let Reset_Password = false;

        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('newPassword');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'newPassword') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'newPassword';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });
        document.getElementById('toggleConfirmPassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('confirmPassword');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'confirmPassword') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'confirmPassword';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        function ToastR(message, type, duration) {
            console.log(`${type.toUpperCase()}: ${message} (${duration}s)`);
        }

        var errorHandlerEmail = function (err) {
            ToastR("Une erreur est survenue!", "error", 10);
        }
        document.getElementById('btnChangePwd').addEventListener('click', function () {
            let newPassword = $("#newPassword").val();
            let confirmPassword = $("#confirmPassword").val();
            const token = new URLSearchParams(window.location.search).get('token');
            if (newPassword == null || newPassword.trim() == "") {
                ToastR("Le nouveau mot de passe est requis", "error", 15);
                return;
            }
            if (confirmPassword == null || confirmPassword.trim() == "") {
                ToastR("La confirmation du mot de passe est requise", "error", 15);
                return;
            }
            if (newPassword !== confirmPassword) {
                ToastR("Les mots de passe ne correspondent pas", "error", 15);
                return;
            }
            if(token == null || token.trim() == "") {
                ToastR("Le token est requis pour réinitialiser le mot de passe", "error", 15);
                return;
            })
            var payload = {
                Token: token,
                NewPassword: newPassword,
                ConfirmPassword: confirmPassword
            };

            let successHandler = function (res) {
                if (res != null) {
                    if (res.success) {
                        ToastR(res.message, "success", 10);
                    } else {
                        ToastR(res.message, "error", 10);
                    }
                } else {
                    ToastR("Erreur lors de l'envoi de l'email", "error", 10);
                }
            }
            ajaxManager("POST", "/Login/ForgetPassword", successHandlerEmail, errorHandlerEmail, payload);
        });
    </script>
</body>
</html>