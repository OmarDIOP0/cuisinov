@{
    // Layout = null;
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - Cuisinov</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/register.css">
    <link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />

</head>
<body>
    <div class="register-container">
        <div class="register-left">
            <div class="logo">
                <div class="logo-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <div class="app-name">CUISINOV</div>
                <div class="app-subtitle">Votre restaurant d'entreprise</div>
            </div>

            <div class="welcome-text">
                <h2>Rejoignez notre communauté</h2>
                <p>Créez votre compte pour accéder à tous les services de notre restaurant d'entreprise.</p>
            </div>

            <ul class="benefits-list">
                <li>
                    <i class="fas fa-bolt"></i>
                    <span>Commandez en quelques clics</span>
                </li>
                <li>
                    <i class="fas fa-utensils"></i>
                    <span>Accédez à des menus personnalisés</span>
                </li>
                <li>
                    <i class="fas fa-bell"></i>
                    <span>Recevez des notifications en temps réel</span>
                </li>
            </ul>
        </div>

        <div class="register-right">
            <h3 class="form-title">Créer un compte</h3>
            <p class="form-subtitle">Remplissez le formulaire ci-dessous pour créer votre compte.</p>

            <form id="registerForm">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="login">
                                Nom d'utilisateur <span class="required-star">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input type="text" class="form-control" id="login" name="login" placeholder="Votre nom d'utilisateur">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="telephone">
                                Téléphone <span class="required-star">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input type="number" class="form-control" id="telephone" name="telephone" placeholder="Votre numéro de téléphone">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="bureau">
                                Bureau
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                                <input type="text" class="form-control" id="bureau" name="bureau" placeholder="Votre bureau">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="entrepriseCode">
                                Code entreprise <span class="required-star">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                <input type="text" class="form-control" id="entrepriseCode" name="entrepriseCode" placeholder="Code fourni par le traiteur">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="password">
                                Mot de passe <span class="required-star">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Créez un mot de passe">
                                <button type="button" class="password-toggle" id="togglePassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            @* <small class="form-text text-muted mt-1">Minimum 8 caractères avec chiffres et lettres</small> *@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" for="confirmPassword">
                                Confirmer le mot de passe <span class="required-star">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirmez votre mot de passe">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group form-check mt-3">
                    <input type="checkbox" class="form-check-input" id="terms">
                    <label class="form-check-label" for="terms">
                        J'accepte les <a href="#">conditions d'utilisation</a> et la <a href="#">politique de confidentialité</a>
                    </label>
                </div>

                <button type="submit" class="btn btn-register" id="submitButton">
                    Créer mon compte
                </button>

                <div class="login-link">
                    Déjà inscrit? <a href="/Login/Index">Connectez-vous ici</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('password');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        // Erreur générique
        var errorHandler = function (err) {
            ToastR("Une erreur est survenue!", "error", 10);
        }

        document.getElementById('registerForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const login = document.getElementById('login').value.trim();
            const telephone = document.getElementById('telephone').value.trim();
            const entrepriseCode = document.getElementById('entrepriseCode').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const bureau = document.getElementById('bureau').value.trim();
            const submitButton = document.getElementById('submitButton');

            // Validation
            if (!login) {
                ToastR("Le nom d'utilisateur est obligatoire", "error", 20);
                return;
            }
            if (!telephone) {
                ToastR("Le numéro de téléphone est obligatoire.", "error", 20);
                return;
            }
            if (!entrepriseCode) {
                ToastR("Le code entreprise est obligatoire.", "error", 20);
                return;
            }
            if (password.length < 8) {
                ToastR("Le mot de passe doit contenir au moins 8 caractères.", "error", 20);
                return;
            }
            if (password !== confirmPassword) {
                ToastR("Les mots de passe ne correspondent pas.", "error", 20);
                return;
            }

            // Loading
            submitButton.classList.add('btn-loading');
            submitButton.disabled = true;

            var formData = new FormData();
                formData.append('Login', login);
                formData.append('Telephone', telephone);
                formData.append('Bureau', bureau);
                formData.append('EntrepriseCode', entrepriseCode);
                formData.append('Password', password);

            // Payload
            var payload = {
                Login: login,
                Telephone: telephone,
                Bureau: bureau,
                EntrepriseCode: entrepriseCode,
                Password: password
            };

            // Success handler
            var successHandler = function (res) {
                submitButton.classList.remove('btn-loading');
                submitButton.disabled = false;
                console.log("Réponse reçue:", res);
                if (res && res.Success) {
                    ToastR(res.Message, "success", 10);
                    window.location.href = "/Home/Menu";
                } else {
                    ToastR(res ? res.Message : "Erreur inconnue", "error", 10);
                }
            };

            // Appel API
            ajaxManager("POST", "/Login/Register", successHandler, errorHandler, payload);
        });
    </script>


</body>
</html>