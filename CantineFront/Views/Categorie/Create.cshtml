@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/createCategorie.css"/>
    <style>
        /* ====== COMMAND CARD STYLE ====== */

        .command-card {
            background: #ffffff;
            border-radius: 14px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            padding: 0;
            margin-bottom: 15px;
            border-left: 4px solid var(--secondary-color);
            transition: all 0.3s ease;
        }

            .command-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 25px rgba(0,0,0,0.12);
            }

            /* Header */
            .command-card .card-header {
                background: var(--gradient-primary);
                padding: 10px 12px;
                color: white;
                display: flex;
                align-items: center;
            }

        .customer-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .customer-icon {
            font-size: 1.1rem;
        }

        /* Body */
        .command-card .card-body {
            padding: 12px 15px;
        }

        /* Location */
        .location-info,
        .payment-method {
            display: flex;
            align-items: center;
            gap: 8px;
            margin: 3px 0;
        }

        .location-icon,
        .payment-icon {
            font-size: 1rem;
            color: var(--primary-color);
        }

        /* Timer badge */
        .timer-badge {
            background: #f1f1f1;
            padding: 4px 8px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
            color: #444;
            margin-right: 5px;
        }

        /* Distance badge */
        .distance-badge {
            background: #ff6b35;
            color: white;
            padding: 4px 8px;
            border-radius: 8px;
            font-size: 0.80rem;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        /* Deliver button */
        .deliver-btn {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white !important;
            border: none;
            padding: 7px 15px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 13px;
            display: inline-flex;
            align-items: center;
            gap: 7px;
            cursor: pointer;
            transition: 0.3s ease;
            margin-top: 6px;
        }

            .deliver-btn:hover {
                background: linear-gradient(135deg, #43a047, #3f8e41);
                transform: translateY(-2px);
            }

        /* Articles list */
        .articles-list {
            margin-top: 10px;
        }

        .article-item {
            background: #f8f9fa;
            padding: 6px 10px;
            border-radius: 6px;
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
            font-size: 0.90rem;
            border-left: 3px solid var(--secondary-color);
        }

        /* Commentaire */
        .comment-section {
            background: #fff7e6;
            padding: 8px 12px;
            border-radius: 8px;
            margin-top: 10px;
            border-left: 3px solid #ffb74d;
        }

        .comment-label {
            font-weight: 600;
            color: #ff9800;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .comment-text {
            margin: 3px 0 0 0;
            font-size: 0.9rem;
        }

    </style>
}

<section class="create-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="create-card">
                    <!-- Header -->
                    <div class="card-header">
                        <h2><i class="fas fa-plus-circle me-2"></i>Créer une Catégorie</h2>
                        <div class="subtitle">Ajoutez une nouvelle catégorie à votre menu</div>
                    </div>

                    <div class="row g-0">
                        <!-- Form Section -->
                        <div class="col-lg-6">
                            <div class="form-container">
                                <form id="form">
                                    <div class="form-group">
                                        <label class="form-label" for="Name">
                                            <i class="fas fa-tag"></i>Nom de la Catégorie
                                        </label>
                                        <input type="text"
                                               class="form-control"
                                               id="Name"
                                               name="Name"
                                               placeholder="Ex: Plats Principaux, Desserts, Boissons..."
                                               required>
                                        <small class="form-text text-muted mt-2">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Choisissez un nom clair et descriptif pour votre catégorie
                                        </small>
                                    </div>
                                   <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="StartTime">
                                                    <i class="fas fa-clock"></i> Heure de début
                                                </label>
                                                <input type="time"
                                                       class="form-control"
                                                       id="StartTime"
                                                       name="StartTime"
                                                       required>
                                                <small class="form-text text-muted mt-2">
                                                    Heure à partir de laquelle la catégorie sera disponible
                                                </small>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="EndTime">
                                                    <i class="fas fa-clock"></i> Heure de fin
                                                </label>
                                                <input type="time"
                                                       class="form-control"
                                                       id="EndTime"
                                                       name="EndTime"
                                                       required>
                                                <small class="form-text text-muted mt-2">
                                                    Heure jusqu’à laquelle la catégorie sera disponible
                                                </small>
                                            </div>
                                        </div>
                                   </div>


                                    <div class="btn-group">
                                        <button class="btn-custom"
                                                id="btnCreate"
                                                type="button"
                                                data-redirectroute="/Categorie/List"
                                                data-url="/Categorie/CreateCategorie">
                                            <i class="fas fa-save me-2"></i>Créer la Catégorie
                                        </button>

                                        <button class="btn-back" type="button" onclick="history.back()">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Commands Panel -->
                        <div class="col-lg-6">
                            <div class="commands-panel">
                                <div class="commands-header">
                                    <i class="fas fa-clock me-2"></i>Commandes en Attente
                                </div>
                                <div class="commands-list" id="messagesList">
                                    <!-- Commandes will be loaded here -->
                                    <div class="empty-state">
                                        <i class="fas fa-clock"></i>
                                        <p>Aucune commande en attente</p>
                                        <small class="text-muted">Les nouvelles commandes apparaîtront ici</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            initializeForm();

            // Load pending commands
            GetPendingCommandes();

            // Form submission handler
            $('#btnCreate').on('click', function() {
                submitForm();
            });

            // Enter key support
            $('#Name').on('keypress', function(e) {
                if (e.which === 13) {
                    submitForm();
                }
            });
        });

        function initializeForm() {
            $('#Name').focus();
        }

        function submitForm() {
            const name = $('#Name').val().trim();
            const btn = $('#btnCreate');

            // Validation
            if (!name) {
                ToastR("Veuillez saisir un nom pour la catégorie", "error", 10);
                $('#Name').focus();
                return;
            }

            if (name.length < 2) {
                ToastR("Le nom de la catégorie doit contenir au moins 2 caractères", "error", 10);
                $('#Name').focus();
                return;
            }

            // Prepare data
            const formData = {
                Name: name
            };

            // Show loading state
            btn.addClass('btn-loading').prop('disabled', true);


        }
    </script>
}