@model CantineFront.ViewModels.CategorieViewModel
@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link href="~/lib/bootstrap-fileinput/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/createCategorie.css" />
}
@{
    string actif = (Model.Categorie?.Actif ?? false) ? "checked" : "";
}
<!-- book section -->
<section class="create-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="create-card">
                    <!-- Header -->
                    <div class="card-header">
                        <h2><i class="fas fa-edit me-2"></i>Modifier la Categorie</h2>
                        <div class="subtitle">Modifiez les informations du département</div>
                    </div>

                    <div class="row g-0">
                        <!-- Form Section -->
                        <div class="col-lg-12">
                            <div class="form-container">
                                <form id="form">
                                    <input type="hidden" name="Id" value="@Model.Categorie.Id" />

                                    <div class="row g-3">
                                        <!-- Nom du Département -->
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label class="form-label" for="Name">
                                                    <i class="fas fa-tag"></i> Nom du Département
                                                </label>
                                                <input type="text"
                                                       class="form-control"
                                                       id="Name"
                                                       name="Name"
                                                       placeholder="Ex: Informatique, Ressources Humaines..."
                                                       value="@Model.Categorie.Name"
                                                       required>
                                                <small class="form-text text-muted mt-2">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Modifiez le nom du département selon vos besoins
                                                </small>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="StartTime">
                                                        <i class="fas fa-clock"></i> Heure de début
                                                    </label>
                                                    <input type="time"
                                                           class="form-control"
                                                           id="StartTime"
                                                           name="StartTime"
                                                           value="@(Model.Categorie.StartTime?.ToString(@"hh\:mm"))"
                                                           required>
                                                    <small class="form-text text-muted mt-2">
                                                        Heure à partir de laquelle la catégorie sera disponible
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="EndTime">
                                                        <i class="fas fa-clock"></i> Heure de fin
                                                    </label>
                                                    <input type="time"
                                                           class="form-control"
                                                           id="EndTime"
                                                           name="EndTime"
                                                           value="@(Model.Categorie.EndTime?.ToString(@"hh\:mm"))"
                                                           required>
                                                    <small class="form-text text-muted mt-2">
                                                        Heure jusqu’à laquelle la catégorie sera disponible
                                                    </small>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Statut Actif -->
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="actif" name="Actif" @actif>
                                                    <label class="form-check-label" for="actif">
                                                        <i class="fas fa-check-circle me-1"></i>Actif
                                                    </label>
                                                </div>
                                                <small class="form-text text-muted">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Un département inactif ne sera pas disponible dans les sélections
                                                </small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="btn-group">
                                        <button class="btn-custom"
                                                id="btnUpdate"
                                                type="button"
                                                data-redirectroute="/Categorie/List"
                                                data-url="/Categorie/UpdateCategorie">
                                            <i class="fas fa-save me-2"></i>Enregistrer les modifications
                                        </button>

                                        <button class="btn-back" type="button" onclick="history.back()">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>