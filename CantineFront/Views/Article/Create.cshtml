@using CantineFront.ViewModels
@model ArticleViewModel

@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/createCategorie.css" />
    <link href="~/lib/bootstrap-fileinput/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
}

<section class="create-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="create-card">
                    <!-- Header -->
                    <div class="card-header">
                        <h2><i class="fas fa-plus-circle me-2"></i>Créer un Article</h2>
                        <div class="subtitle">Ajoutez un nouvel article à votre menu</div>
                    </div>

                    <div class="row g-0">
                        <!-- Form Section -->
                        <div class="col-lg-6">
                            <div class="form-container">
                                <form id="form">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="Title">
                                                    <i class="fas fa-tag"></i>Nom de l'Article
                                                </label>
                                                <input type="text"
                                                       class="form-control"
                                                       id="Title"
                                                       name="Title"
                                                       placeholder="Ex: Pizza Margherita, Salade César..."
                                                       required>
                                                <small class="form-text text-muted mt-2">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Choisissez un nom attractif pour votre article
                                                </small>
                                                </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="EntrepriseId">
                                                    <i class="fas fa-building"></i>Entreprise
                                                </label>
                                                <select class="form-control nice-select wide"
                                                        name="EntrepriseId"
                                                        id="EntrepriseId"
                                                        required>
                                                    <option disabled selected>
                                                        Sélectionnez une entreprise
                                                    </option>
                                                    @if (Model.Entreprises != null)
                                                    {
                                                        foreach (var ent in Model.Entreprises)
                                                        {
                                                            <option value="@ent.Id">@ent.Nom (@ent.Code)</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="Description">
                                            <i class="fas fa-align-left"></i>Description
                                        </label>
                                        <input type="text"
                                               class="form-control"
                                               id="Description"
                                               name="Description"
                                               placeholder="Décrivez brièvement votre article..."
                                               required>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="PrixDachat">
                                                    <i class="fas fa-money-bill-wave"></i>Prix d'Achat
                                                </label>
                                                <input type="number"
                                                       class="form-control"
                                                       id="PrixDachat"
                                                       name="PrixDachat"
                                                       placeholder="0.00"
                                                       min="0"
                                                       step="0.01">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="PrixDeVente">
                                                    <i class="fas fa-tags"></i>Prix de Vente
                                                </label>
                                                <input type="number"
                                                       class="form-control"
                                                       id="PrixDeVente"
                                                       name="PrixDeVente"
                                                       placeholder="0.00"
                                                       min="0"
                                                       step="0.01"
                                                       required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="QuantiteStock">
                                                    <i class="fas fa-boxes"></i>Quantité en Stock
                                                </label>
                                                <input type="number"
                                                       class="form-control"
                                                       id="QuantiteStock"
                                                       name="QuantiteStock"
                                                       placeholder="0"
                                                       min="0"
                                                       required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="CategorieId">
                                                    <i class="fas fa-layer-group"></i>Catégorie
                                                </label>
                                                <select class="form-control"
                                                        name="CategorieId"
                                                        id="CategorieId"
                                                        required>
                                                    <option disabled selected>
                                                        Sélectionnez une catégorie
                                                    </option>
                                                    @if (Model.Categories != null)
                                                    {
                                                        foreach (var item in Model.Categories)
                                                        {
                                                            <option value="@item.Id">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-check">
                                        <input type="checkbox"
                                               class="form-check-input"
                                               id="ControlStockQuantity"
                                               name="ControlStockQuantity"
                                               value="true"
                                               checked>
                                        <label class="form-check-label" for="ControlStockQuantity">
                                            <i class="fas fa-check-circle me-2"></i>
                                            Vérifier le stock lors de la commande
                                        </label>
                                    </div>


                                    <div class="form-group">
                                        <label class="form-label" for="image">
                                            <i class="fas fa-image"></i>Image de l'Article
                                        </label>
                                        <input type="file"
                                               class="form-control"
                                               id="image"
                                               name="Image"
                                               accept="image/*">
                                        <small class="form-text text-muted mt-2">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Formats acceptés: PNG, JPG, JPEG (Max: 100KB)
                                        </small>
                                    </div>

                                    <div class="btn-group">
                                        <button class="btn-custom"
                                                id="btnCreate"
                                                type="button"
                                                data-redirectroute="/Article/List"
                                                data-url="/Article/CreateArticle">
                                            <i class="fas fa-save me-2"></i>Créer l'Article
                                        </button>

                                        <button class="btn-back" type="button" onclick="history.back()">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Commands Panel -->
                        <div class="col-lg-6">
                            <div class="commands-panel">
                                <div class="commands-header">
                                    <i class="fas fa-clock me-2"></i>Commandes en Attente
                                </div>
                                <div class="commands-list" id="messagesList">
                                    <!-- Commandes will be loaded here -->
                                    <div class="empty-state">
                                        <i class="fas fa-clock"></i>
                                        <p>Aucune commande en attente</p>
                                        <small class="text-muted">Les nouvelles commandes apparaîtront ici</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

