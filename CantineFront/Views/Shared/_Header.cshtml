@inject IHttpContextAccessor Accessor
@{
    var CartBadgeCount = Accessor.HttpContext?.Session.GetInt32("CartBadgeCount") ?? 0;
    bool logged = Convert.ToBoolean(Accessor.HttpContext?.Session.GetString("Logged") ?? "false");
    bool isAdmin = Convert.ToBoolean(Accessor.HttpContext?.Session.GetString("IsAdmin") ?? "false");
    bool isGerant = Convert.ToBoolean(Accessor.HttpContext?.Session.GetString("IsGerant") ?? "false");
    string username = Accessor.HttpContext?.Session.GetString("Username") ?? "";
    string isVisible = CartBadgeCount <= 0 ? "d-none" : "";
}
@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/header.css" />
}

<div class="container-fluid fixed-top px-0 wow fadeIn" data-wow-delay="0.1s">
    <!-- Top Bar -->
    <div class="top-bar row gx-0 align-items-center d-none d-lg-flex">
        <div class="col-lg-6 px-5 text-start">
            <small><i class="fa fa-map-marker-alt me-2"></i>Cuisinov, Votre Restaurant d'Entreprise</small>
            <small class="ms-4"><i class="fa fa-envelope me-2"></i>contact@cuisinov.com</small>
        </div>
        <div class="col-lg-6 px-5 text-end">
            <small>Suivez-nous :</small>
            <a class="text-body ms-3" href=""><i class="fab fa-facebook-f"></i></a>
            <a class="text-body ms-3" href=""><i class="fab fa-twitter"></i></a>
            <a class="text-body ms-3" href=""><i class="fab fa-linkedin-in"></i></a>
            <a class="text-body ms-3" href=""><i class="fab fa-instagram"></i></a>
        </div>
    </div>

    <!-- Main Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
        <a href="/Home/Menu" class="navbar-brand ms-4 ms-lg-0">
            <h1 class="fw-bold text-primary m-0">C<span class="text-secondary">uisin</span>ov</h1>
        </a>

        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <!-- Menu Items -->
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                @if (logged)
                {
                    <a href="/Home/Menu" class="nav-item nav-link active">
                        <i class="fa fa-utensils me-2"></i>Menu
                    </a>

                    if (!isGerant)
                    {
                        <a href="/Commande/MyCommands" class="nav-item nav-link">
                            <i class="fa fa-list-alt me-2"></i>Mes Commandes
                        </a>
                    }

                    @if (isAdmin || isGerant)
                    {
                        <a href="/Commande/List" class="nav-item nav-link">
                            <i class="fa fa-clipboard-list me-2"></i>Commandes
                        </a>
                        <a href="/Commande/Index" class="nav-item nav-link">
                            <i class="fa fa-clock me-2"></i>En Attente
                        </a>

                        <!-- Gestion Dropdown -->
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fa fa-cogs me-2"></i>Gestion
                            </a>
                            <div class="dropdown-menu m-0">
                                <a href="/Article/List" class="dropdown-item">
                                    <i class="fa fa-box me-2"></i>Articles
                                </a>
                                <a href="/Categorie/List" class="dropdown-item">
                                    <i class="fa fa-tags me-2"></i>Catégories
                                </a>

                                @if (isAdmin)
                                {
                                    <div class="dropdown-divider"></div>
                                    <a href="/Emplacement/List" class="dropdown-item">
                                        <i class="fa fa-map-marker me-2"></i>Emplacements
                                    </a>
                                    <a href="/User/List" class="dropdown-item">
                                        <i class="fa fa-users me-2"></i>Utilisateurs
                                    </a>
                                    <a href="/Department/List" class="dropdown-item">
                                        <i class="fa fa-building me-2"></i>Départements
                                    </a>
                                    <a href="/Entreprise/List" class="dropdown-item">
                                        <i class="fa fa-briefcase me-2"></i>Entreprise
                                    </a>
                                    <a href="/PaymentMethod/List" class="dropdown-item">
                                        <i class="fa fa-credit-card me-2"></i>Paiements
                                    </a>
                                }
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Right Side Items -->
            <div class="d-none d-lg-flex ms-2">
                @if (logged)
                {
                    <!-- Cart Icon -->
                    <a class="btn-sm-square bg-white rounded-circle ms-3 position-relative" href="#" id="cartButton">
                        <small class="fa fa-shopping-cart text-body"></small>
                        @if (CartBadgeCount > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cartBadge">
                                @CartBadgeCount
                            </span>
                        }
                    </a>

                    <!-- User Profile -->
                    <div class="nav-item dropdown ms-3">
                        <a class="btn-sm-square bg-white rounded-circle dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <small class="fa fa-user text-body"></small>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end m-0">
                            <a class="dropdown-item" href="/Home/Profil">
                                <i class="fa fa-user me-2"></i>@username
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/Login/Logout">
                                <i class="fa fa-sign-out-alt me-2"></i>Déconnexion
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Login Button -->
                    <a class="btn btn-warning text-dark font-weight-bold px-4 ms-3" href="/Login/Index">
                        <i class="fa fa-sign-in-alt me-2"></i>Connexion
                    </a>
                }
            </div>

            <!-- Mobile Right Side Items -->
            <div class="d-lg-none mt-3">
                @if (logged)
                {
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-outline-primary me-2" href="#" id="cartButtonMobile">
                            <i class="fa fa-shopping-cart me-2"></i>Panier
                            @if (CartBadgeCount > 0)
                            {
                                <span class="badge bg-danger ms-1" id="cartBadgeMobile">@CartBadgeCount</span>
                            }
                        </a>
                        <a class="btn btn-outline-secondary" href="/Home/Profil">
                            <i class="fa fa-user me-2"></i>@username
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-warning text-dark font-weight-bold px-4" href="/Login/Index">
                            <i class="fa fa-sign-in-alt me-2"></i>Connexion
                        </a>
                    </div>
                }
            </div>
        </div>
    </nav>
</div>