@{
    ViewData["Title"] = "Home Page";
}
@section slide{
    <partial name="_SlideSection" />
}
@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/article.css" />

}

<section class="food_section layout_padding-bottom">
    <div class="container ">
        <div class="heading_container heading_center">
           
            <h3 class="mt-2 " id="category">
               
            </h3>
            <h4>
                Nos Articles
            </h4>
        </div>
    <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Catégorie</label>
                <select class="form-control nice-select wide " name="CategorieId" id="catId">
                    <option value="" disabled selected>
                        Sélectionnez la catégorie?
                    </option>

                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Rechercher</label>
                <input type="text" class="form-control" placeholder="" id="searchText" />
            </div>
    </div> 
        
        <div class="d-flex justify-content-center">
            <div class="center my-3 justify-content-center align-self-center" id="noItemsAlert" style="display:none">Aucun article disponible pour cette catégorie</div>
        </div>

        <div class="filters-content ">
                <div class="row grid" id="gridArticles">
                </div>
            </div>
            <div class="btn-box" style="display:none">
                <a href="">
                Voir plus
                </a>
            </div>
      
    <a href="#" class="btn btn-lg btn-lg-square rounded-circle back-to-top"><i class="fas fa-arrow-circle-down"></i></a>
    </div>
</section>
<!-- Modal pour les détails de l'article -->
<div class="modal fade" id="articleDetailModal" tabindex="-1" aria-labelledby="articleDetailModalLabel">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="articleDetailModalLabel">Détails de l'article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <img id="modalArticleImage" src="/images/default.png" class="img-fluid rounded" alt="Article" style="max-height: 300px; object-fit: cover; width: 100%;">
                    </div>
                    <div class="col-md-6">
                        <h4 id="modalArticleTitle" class="text-primary mb-3"></h4>
                        <p id="modalArticleDescription" class="text-muted mb-3"></p>
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Prix de vente:</strong>
                                <div id="modalArticlePrice" class="h5 text-success"></div>
                            </div>
                            <div class="col-6">
                                <strong>Stock disponible:</strong>
                                <div id="modalArticleStock" class="h5 text-info"></div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Catégorie:</strong>
                                <div id="modalArticleCategory" class="text-dark"></div>
                            </div>
                            <div class="col-6">
                                <strong>Statut:</strong>
                                <div id="modalArticleStatus" class="text-dark"></div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong>Disponibilité:</strong>
                            <div id="modalArticleAvailability" class="text-dark"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>


<!-- end client section -->
@section    Scripts{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script>
        const ARTICLES_IDS = []
        $(function () {
            $("#searchText").on("input", function () {
                var value = $(this).val()
                $(".grid").isotope({
                    // filter element with numbers greater than 50
                    filter: function () {
                        // _this_ is the item element. Get text of element's .number
                        var articleTitle = $(this).find('.articleName').text();
                        articleTitle = articleTitle ? articleTitle : "";
                        value = value.toLowerCase();
                        // return true to show, false to hide
                        return articleTitle.toLowerCase().includes(value)
                    }
                })
            });
            var errorHandler = (err) => {

                ToastR("Une erreur a été rencontré", "error", 15);
            }
            var successCategoryHandler = function (res) {
                // console.log(JSON.stringify(res))
                if (res) {

                    if (res.success && res.data) {
                        //  ToastR(res.message, res.status, 15);
                        var len = res.data.length;
                     
                        res.data.forEach((item, index) => {

                            if(item.actif){
                                var selected = item.id == "@ViewBag.CategorieId" ? "selected" : "";
                                $("#catId").append(`<option ${selected} value="${item.id}">${item.name}</option>`);

                                $("#filterList").append(`<li data-filter=".category_${item.id}">${item.name}</li>`);
                                var active = index == 0 ? "active" : '';
                                        $("#sildeCarouselInner").append(`
                                               <div class="carousel-item ${active}">
                                            <div class="container">
                                                <div class="row align-items-center justify-content-center">
                                                    <div class="col-md-8 col-lg-6 text-center text-white">
                                                        <div class="carousel-content py-4">
                                                            <h2 class="h1 font-weight-bold mb-3 text-shadow text-dark">
                                                                ${item.name}
                                                            </h2>
                                                            <p class="mb-3 text-shadow text-dark">Découvrez nos délicieuses spécialités</p>
                                                            <div class="btn-container">
                                                                <a href="/Home/Index?categorieId=${item.id}" class="btn custom-btn btn-lg px-4 py-2 font-weight-bold">
                                                                    <i class="fa fa-utensils mr-2"></i>Commander
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                            `);
                            }


                            if (index == len - 1) {

                                $("#catId").val(@ViewBag.CategorieId)
                                $("#catId").niceSelect();
                                //ajaxManager('GET', '/Article/GetArticles', successArticleHandler, errorHandler);
                            }
                        })

                    }
                }
            }

             const ARTICLES_DATA = []; // Ajoutez cette ligne avec ARTICLES_IDS

        // Fonction pour ouvrir le modal de détails
        function openArticleDetailModal(articleId) {
            var article = ARTICLES_DATA.find(item => item.id === articleId);
            if (!article) return ToastR("Article non trouvé", "error", 15);

            populateModal(article);
            $('#modalAddToCartBtn').blur();
            articleModal.show();
        }

        // Fonction pour remplir le modal
        function populateModal(article) {
            var imageElement = document.getElementById('imageArticle_' + article.id);
            var imageSrc = imageElement ? imageElement.src : '/images/default.png';
            $('#modalArticleImage').attr('src', imageSrc);

            $('#modalArticleTitle').text(article.title);
            $('#modalArticleDescription').text(article.description || 'Aucune description disponible');
            $('#modalArticlePrice').text(article.prixDeVente + ' XOF');
            $('#modalArticleStock').text((article.quantiteStock || 0) + ' unités');

            var categoryName = article.categorieNavigation ? article.categorieNavigation.name :
                               (article.categorieName || 'Non catégorisé');
            $('#modalArticleCategory').text(categoryName);

            var status = article.isApproved ? 'Approuvé' : 'En attente';
            $('#modalArticleStatus').text(status);

            var isAvailable = article.actif && (article.quantiteStock > 0 || !article.controlStockQuantity);
            var availability = isAvailable ?
                '<span class="text-success">✓ Disponible</span>' :
                '<span class="text-danger">✗ Indisponible</span>';
            $('#modalArticleAvailability').html(availability);
        }

        // Gestionnaire d'événement pour les boutons de détails
        $(document).on('click', '.view-detail-btn', function(e) {
            e.preventDefault();
            var articleId = $(this).data('articleid');
            openArticleDetailModal(articleId);
        });

        // Initialisation du modal Bootstrap
        var articleModalEl = document.getElementById('articleDetailModal');
        var articleModal = new bootstrap.Modal(articleModalEl, {
            backdrop: true,
            keyboard: true
        });


            var successArticleHandler = function (res) {
                // console.log(JSON.stringify(res))
                if (res) {

                    if (res.success && res.data ) {

                        var len = res.data.length;

                        console.log("len = ",len)
                        if (len >= 1) {
                            $("#noItemsAlert").hide();
                            $(".btn-box").show()
                        }else{
                            $("#noItemsAlert").show();
                            $("#gridArticles").html("<h1 class='col-md-12 text-center my-5 text-decoration-underline'>No Result.</h1>")
                        }
                        $("#gridArticles").html("");
                        res.data.forEach((item, index) => {
                            ARTICLES_DATA.push(item); 
                            ARTICLES_IDS.push(item.id)
                          if(item.actif){

                                var description = "";
                                if (item.description) {
                                    description = item.description.length > 50 ? (item.description.substring(0, 50) + "...") : item.description;
                                }
                                var itemCart = { ...item }
                                //     delete itemCart.image;
                                itemCart = JSON.stringify(itemCart);
                                        $("#gridArticles").append(`
                                            <div class="col-xl-3 col-lg-4 col-md-6 mb-4 all category_${item.categorieId} wow fadeInUp" data-itemcart='${itemCart}' data-wow-delay="0.1s">
                                                <div class="product-item">
                                                    <div class="position-relative bg-light overflow-hidden">
                                                        <img onerror="this.src='/images/default.png';"
                                                             src="/images/default.png"
                                                             id="imageArticle_${item.id}"
                                                             class="img-fluid w-100"
                                                             alt="${item.title}"
                                                             style="height: 200px; object-fit: cover;">
                                                        <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">Nouveau</div>
                                                    </div>
                                                    <div class="text-center p-4">
                                                        <a class="d-block h5 mb-2 articleName">${item.title}</a>
                                                        <span class="text-primary me-1">${item.prixDeVente} XOF</span>
                                                    </div>
                                                    <div class="d-flex border-top">
                                                        <small class="w-50 text-center border-end py-2">
                                                            <a class="text-body view-detail-btn" href="#!"
                                                               data-bs-toggle="modal"
                                                               data-bs-target="#articleDetailModal"
                                                               data-articleid="${item.id}">
                                                                <i class="fa fa-eye text-primary me-2"></i>Détails
                                                            </a>
                                                        </small>
                                                        <small class="w-50 text-center py-2">
                                                            <a class="text-body add-to-cart-btn addToCart" href="#!" data-itemcart='${itemCart}'>
                                                                <i class="fa fa-shopping-bag text-primary me-2"></i>Ajouter
                                                            </a>
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                        `);
                          }




                            if (index == len - 1) {
                                initAddArticleToCartClick();
                                try {
                                    // Add hidden class if item hidden
                                    var itemReveal = Isotope.Item.prototype.reveal;
                                    Isotope.Item.prototype.reveal = function () {
                                        itemReveal.apply(this, arguments);
                                        $(this.element).removeClass('isotope-hidden');
                                    };
                                    var itemHide = Isotope.Item.prototype.hide;
                                    Isotope.Item.prototype.hide = function () {
                                        itemHide.apply(this, arguments);
                                        $(this.element).addClass('isotope-hidden');
                                    };

                                } catch {

                                }
                                var $grid = $('.grid').isotope();
                                if($grid){
                                    $grid.isotope('destroy');
                                }
                               
                                 $grid = $(".grid").isotope({
                                    itemSelector: ".all",
                                    percentPosition: false,
                                    masonry: {
                                        columnWidth: ".all"
                                    }
                                });
                                try {
                                    loadImageSuccessHandler = (res) => {
                                        if (res != null) {
                                            var imageId = res.id
                                            $(`#imageArticle_${imageId}`).attr("src", `data:image/png;base64,${res.image}`);
                                        }

                                    }
                                    function doSetTimeout(i) {
                                        var id = ARTICLES_IDS[i]
                                        setTimeout(function () {
                                            console.log("images = ", id)
                                            ajaxManager('GET', '/Article/GetArticleImage?id=' + id, loadImageSuccessHandler, (err) => { });
                                        }, 10);
                                    }

                                    for (var i = 0; i < len; i++) {

                                        doSetTimeout(i);
                                    }
                                }
                                catch {


                                }
                             
                            }

                        })

                    }
                else{

                        $("#noItemsAlert").show();
                }
                
                }
            }

            $("#catId").on('change',function(e){
                $("#category").html($("#catId option:selected").text())
                var data = { categorieId: $(this).val() };
                ajaxManager('GET', '/Article/GetMenu', successArticleHandler, errorHandler, data);
            
            });

            ajaxManager('GET', '/Categorie/GetCategories', successCategoryHandler, errorHandler);
            ajaxManager('GET', '/Article/GetMenu', successArticleHandler, errorHandler, { categorieId: @ViewBag.CategorieId });



        });
                $(document).ready(function() {
            var $backToTop = $('.back-to-top');

            $(window).scroll(function() {
                if ($(window).scrollTop() > 100) { // après 100px de scroll
                    $backToTop.fadeIn();
                } else {
                    $backToTop.fadeOut();
                }
            });

            $backToTop.click(function(e) {
                e.preventDefault();
                $('html, body').animate({ scrollTop: 0 }, '300'); // remonte en haut
            });
        });
               
    </script>

                                        }