        });

        function openArticleDetailModal(articleId) {
            var article = ARTICLES_DATA.find(item => item.id === articleId);
            if (!article) return ToastR("Article non trouvé", "error", 15);

            populateModal(article);
            $('#modalAddToCartBtn').blur();

            // Affiche le modal (réutilisation de l'instance)
            articleModal.show();
        }

        // Fonction pour remplir le modal
        function populateModal(article) {
            // Image
            var imageElement = document.getElementById('imageArticle_' + article.id);
            var imageSrc = imageElement ? imageElement.src : '/images/default.png';
            $('#modalArticleImage').attr('src', imageSrc);

            // Titre et description
            $('#modalArticleTitle').text(article.title);
            $('#modalArticleDescription').text(article.description || 'Aucune description disponible');

            // Prix et stock
            $('#modalArticlePrice').text(article.prixDeVente + ' XOF');
            $('#modalArticleStock').text((article.quantiteStock || 0) + ' unités');

            // Catégorie
            var categoryName = article.categorieNavigation ? article.categorieNavigation.name :
                               (article.categorieName || 'Non catégorisé');
            $('#modalArticleCategory').text(categoryName);

            // Statut
            var status = article.isApproved ? 'Approuvé' : 'En attente';
            $('#modalArticleStatus').text(status);

            // Disponibilité
            var isAvailable = article.actif && (article.quantiteStock > 0 || !article.controlStockQuantity);
            var availability = isAvailable ?
                '<span class="text-success">✓ Disponible</span>' :
                '<span class="text-danger">✗ Indisponible</span>';
            $('#modalArticleAvailability').html(availability);

        }

