@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <style>
        .custom-btn {
            background: linear-gradient(135deg, #FF6B35 0%, #00C9B1 100%);
        }

        .food_section {
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            padding: 80px 0;
        }

        .heading_center h4 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 2rem;
            position: relative;
        }

            .heading_center h4::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background: linear-gradient(135deg, #FF6B35 0%, #00C9B1 100%);
                border-radius: 2px;
            }

        .filters_menu {
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            list-style-type: none;
            margin: 2rem 0;
            gap: 10px;
        }

            .filters_menu li {
                padding: 12px 28px;
                cursor: pointer;
                border-radius: 25px;
                background: #ffffff;
                border: 2px solid #e9ecef;
                color: #6c757d;
                font-weight: 500;
                transition: all 0.3s ease;
                margin: 5px;
            }

                .filters_menu li.active {
                    background: linear-gradient(135deg, #FF6B35 0%, #00C9B1 100%);
                    color: #ffffff;
                    border-color: transparent;
                    box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);
                }

                .filters_menu li:hover:not(.active) {
                    border-color: #FF6B35;
                    color: #FF6B35;
                    transform: translateY(-2px);
                }

        .filters-content .col-12 {
            max-width: 500px;
            margin: 0 auto 2rem auto;
        }

        .filters-content .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .filters-content .form-control {
            border-radius: 12px;
            border: 2px solid #e9ecef;
            padding: 12px 20px;
            transition: all 0.3s ease;
        }

            .filters-content .form-control:focus {
                border-color: #FF6B35;
                box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.1);
            }

        #noItemsAlert {
            background: #ffffff;
            border: 1px solid #e9ecef;
            border-radius: 12px;
            padding: 2rem;
            color: #6c757d;
            font-weight: 500;
        }

        .btn-box a {
            display: inline-block;
            padding: 12px 40px;
            background: linear-gradient(135deg, #FF6B35 0%, #00C9B1 100%);
            color: #ffffff;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-box a:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
            color: #ffffff;
            text-decoration: none;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .food_section

        {
            padding: 60px 0;
        }

        .heading_center h4 {
            font-size: 2rem;
        }

        .filters_menu li {
            padding: 10px 20px;
            font-size: 0.9rem;
        }

        }

        .food_section .filters_menu {
            padding: 0;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -ms-flex-wrap: wrap;
            flex-wrap: wrap;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            list-style-type: none;
            margin: 45px 0 20px 0;
        }

            .food_section .filters_menu li {
                padding: 7px 25px;
                cursor: pointer;
                border-radius: 25px;
            }

                .food_section .filters_menu li.active {
                    background-color: #222831;
                    color: #ffffff;
                }

        .food_section .box {
            position: relative;
            margin-top: 25px;
            background-color: #ffffff;
            border-radius: 10px;
            color: #ffffff;
            border-radius: 15px;
            overflow: hidden;
            background: linear-gradient(to bottom, #f1f2f3 25px, #222831 25px);
        }

            .food_section .box .img-box {
                background: #f1f2f3;
                display: -webkit-box;
                display: -ms-flexbox;
                display: flex;
                -webkit-box-pack: center;
                -ms-flex-pack: center;
                justify-content: center;
                -webkit-box-align: center;
                -ms-flex-align: center;
                align-items: center;
                height: 215px;
                border-radius: 0 0 0 45px;
                margin: -1px;
                padding: 25px;
            }

                .food_section .box .img-box img {
                    max-width: 100%;
                    max-height: 145px;
                    -webkit-transition: all .2s;
                    transition: all .2s;
                }

            .food_section .box .detail-box {
                padding: 25px;
            }

                .food_section .box .detail-box h5 {
                    font-weight: 600;
                }

                .food_section .box .detail-box p {
                    font-size: 15px;
                }

                .food_section .box .detail-box h6 {
                    margin-top: 10px;
                }

            .food_section .box .options {
                display: -webkit-box;
                display: -ms-flexbox;
                display: flex;
                -webkit-box-pack: justify;
                -ms-flex-pack: justify;
                justify-content: space-between;
            }

            .food_section .box .options a {
                width: 40px;
                height: 40px;
                border-radius: 100%;
                background: #ffbe33;
                display: -webkit-box;
                display: -ms-flexbox;
                display: flex;
                -webkit-box-pack: center;
                -ms-flex-pack: center;
                justify-content: center;
                -webkit-box-align: center;
                -ms-flex-align: center;
                align-items: center;
            }

            .food_section .box .options a svg {
                width: 18px;
                height: auto;
                fill: #ffffff;
            }

            .food_section .box:hover .img-box img {
                -webkit-transform: scale(1.1);
                transform: scale(1.1);
                border-color: #ffbe33;
            }

        .food_section .btn-box {
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            margin-top: 45px;
        }

        .food_section .btn-box a {
            display: inline-block;
            padding: 10px 55px;
            background-color: #ffbe33;
            color: #ffffff;
            border-radius: 45px;
            -webkit-transition: all 0.3s;
            transition: all 0.3s;
            border: none;
        }

        .food_section .btn-box a:hover {
            background-color: #e69c00;
        }

        .food-section {
            background: #f8f9fa;
        }

        .article-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
        }

        .food-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        }

        .article-card {
            transition: all 0.3s ease;
            border-radius: 12px;
            overflow: hidden;
        }

        .article-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.15) !important;
        }

        .card-img-container {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 180px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    </style>
}
@section slide{
    <partial name="_SlideSection" />
}
<section class="food_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h4>
                Articles disponibles
            </h4>
        </div>

        <ul id="filterList" class="filters_menu">
            <li class="active" data-filter="*">Toutes les catégories</li>
        </ul>

        <div class="filters-content">
            <div class="col-12">
                <label class="form-label">Rechercher</label>
                <input type="text" class="form-control" placeholder="" id="searchText" />
            </div>

            <div class="d-flex justify-content-center">
                <div class="center my-3 justify-content-center align-self-center" id="noItemsAlert" style="display:none">
                    Aucun article disponible pour cette catégorie
                </div>
            </div>

            <div id="gridArticles" class="row grid">

            </div>
        </div>

        <div class="btn-box" style="display:none">
            <a href="">
                Voir plus
            </a>
        </div>
    </div>
</section>

@section    Scripts{


    <script>
        const ARTICLES_IDS = []
        $(function () {
            try {
            } catch {


            }


            $("#searchText").on("input", function () {
                var value = $(this).val()
                $(".grid").isotope({
                    filter: function () {
                        var articleTitle = $(this).find('.articleName').text();
                        articleTitle = articleTitle ? articleTitle : "";
                        value = value.toLowerCase();
                        // return true to show, false to hide
                        return articleTitle.toLowerCase().includes(value)
                    }
                })
            });
            var errorHandler = (err) => {

                ToastR("Une erreur a été rencontré", "error", 15);
            }
            var successCategoryHandler = function (res) {
                // console.log(JSON.stringify(res))
                if (res) {

                    if (res.success && res.data) {
                        //  ToastR(res.message, res.status, 15);
                        var len = res.data.length;
                        res.data.forEach((item, index) => {
                            //   console.log("item = ",item)

                            if (item.actif) {
                                $("#filterList").append(`<li data-filter=".category_${item.id}">${item.name}</li>`);
                                var active = index == 0 ? "active" : '';
                                     $("#sildeCarouselInner").append(`
                                        <div class="carousel-item ${active}">
                                            <div class="container">
                                                <div class="row align-items-center justify-content-center">
                                                    <div class="col-md-8 col-lg-6 text-center text-white">
                                                        <div class="carousel-content py-4">
                                                            <h2 class="h1 font-weight-bold mb-3 text-shadow">
                                                                ${item.name}
                                                            </h2>
                                                            <p class="mb-3 text-shadow">Découvrez nos délicieuses spécialités</p>
                                                            <div class="btn-container">
                                                                <a href="/Home/Index?categorieId=${item.id}" class="btn custom-btn btn-lg px-4 py-2 font-weight-bold">
                                                                    <i class="fa fa-utensils mr-2"></i>Commander
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    `);
                            }



                            if (index == len - 1) {



                                ajaxManager('GET', '/Article/GetMenu', successArticleHandler, errorHandler);
                            }
                        })

                    }
                }
            }
            var successArticleHandler = function (res) {
                // console.log(JSON.stringify(res))
                if (res) {

                    if (res.success && res.data) {

                        var len = res.data.length;
                        if (len > 1) {
                            $(".btn-box").show()
                            $("#noItemsAlert").hide();
                        } else {

                            $("#noItemsAlert").show();

                        }
                        $("#gridArticles").html("");
                        res.data.forEach((item, index) => {
                            ARTICLES_IDS.push(item.id)


                            if (item.actif) {

                                var description = "";
                                if (item.description) {
                                    description = item.description.length > 50 ? (item.description.substring(0, 50) + "...") : item.description;
                                }
                                var itemCart = { ...item }
                                // delete itemCart.image;
                                itemCart = JSON.stringify(itemCart);
                                       $("#gridArticles").append(`
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4 all addToCart category_${item.categorieId}" data-itemcart='${itemCart}'>
                <div class="card article-card h-100 border-0 shadow-sm">
                    <div class="card-img-top position-relative">
                        <img onerror="this.src='/images/default.png';"
                             src="/images/default.png"
                             id="imageArticle_${item.id}"
                             class="img-fluid p-4"
                             alt="${item.title}"
                             style="height: 200px; object-fit: contain; width: 100%;">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h6 class="articleName card-title font-weight-bold text-dark mb-2">
                            ${item.title}
                        </h6>
                        <p class="card-text text-muted small flex-grow-1 mb-3" style="min-height: 40px;">
                            ${description}
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="h6 font-weight-bold text-warning mb-0">
                                ${item.prixDeVente} XOF
                            </span>
                            <a href="#!" class="btn btn-warning rounded-circle p-2 d-flex align-items-center justify-content-center"
                               data-itemcart='${itemCart}'
                               style="width: 45px; height: 45px;">
                                ${charpSvgIcon}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        `);
                            }

                            if (index == len - 1) {


                                initAddArticleToCartClick();

                                try {
                                    var itemReveal = Isotope.Item.prototype.reveal;
                                    Isotope.Item.prototype.reveal = function () {
                                        itemReveal.apply(this, arguments);
                                        $(this.element).removeClass('isotope-hidden');
                                    };
                                    var itemHide = Isotope.Item.prototype.hide;
                                    Isotope.Item.prototype.hide = function () {
                                        itemHide.apply(this, arguments);
                                        $(this.element).addClass('isotope-hidden');
                                    };

                                } catch {

                                }

                                $('.filters_menu li').click(function () {
                                    $('.filters_menu li').removeClass('active');
                                    $(this).addClass('active');

                                    var data = $(this).attr('data-filter');
                                    $grid.isotope({
                                        filter: data
                                    })
                                });

                                var $grid = $(".grid").isotope({
                                    itemSelector: ".all",
                                    percentPosition: false,
                                    masonry: {
                                        columnWidth: ".all"
                                    }
                                });
                                $grid.isotope('on', 'layoutComplete', function () {
                                    var numItems = $grid.find('.all:not(.isotope-hidden)').length;
                                    if (numItems == 0) {
                                        $("#noItemsAlert").show();

                                    } else {

                                        $("#noItemsAlert").hide();
                                    }
                                });
                                try {
                                    loadImageSuccessHandler = (res) => {
                                        // console.log("images = ",res.id)
                                        if (res != null) {
                                            var imageId = res.id
                                            $(`#imageArticle_${imageId}`).attr("src", `data:image/png;base64,${res.image}`);
                                        }

                                    }
                                    function doSetTimeout(i) {
                                        var id = ARTICLES_IDS[i]
                                        setTimeout(function () {
                                         //   console.log("images = ", id)
                                            ajaxManager('GET', '/Article/GetArticleImage?id=' + id, loadImageSuccessHandler, (err) => { });
                                        }, 10);
                                    }

                                    for (var i = 0; i < len; i++) {

                                        doSetTimeout(i);
                                    }
                                }
                                catch{


                                }
                     

                            }

                        })
                    }
                }
            }
            ajaxManager('GET', '/Categorie/GetCategories', successCategoryHandler, errorHandler);


        });
    </script>

                                        }