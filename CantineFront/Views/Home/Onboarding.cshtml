@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <style>
        /* STYLES MODERNES POUR L'ONBOARDING */
        .onboarding-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .onboarding-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 1200px;
            margin: 2rem auto;
        }

        .onboarding-content {
            padding: 3rem;
        }

        .onboarding-header {
            text-align: center;
            margin-bottom: 3rem;
        }

            .onboarding-header h1 {
                font-size: 3rem;
                font-weight: 800;
                background: linear-gradient(135deg, #FF6B35 0%, #00C9B1 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                margin-bottom: 1rem;
            }

            .onboarding-header p {
                font-size: 1.2rem;
                color: #6c757d;
                max-width: 600px;
                margin: 0 auto;
            }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .feature-card {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 107, 53, 0.1);
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(255, 107, 53, 0.15);
            }

        .feature-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, #FF6B35 0%, #00C9B1 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
        }

        .feature-card h3 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        .feature-card p {
            color: #6c757d;
            line-height: 1.6;
        }

        .onboarding-steps {
            background: #f8f9fa;
            padding: 3rem;
            border-radius: 15px;
            margin-bottom: 3rem;
        }

        .step-item {
            display: flex;
            align-items: center;
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .step-number {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #FF6B35 0%, #00C9B1 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.2rem;
            margin-right: 1.5rem;
            flex-shrink: 0;
        }

        .step-content h4 {
            font-size: 1.3rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .step-content p {
            color: #6c757d;
            margin: 0;
        }

        .cta-section {
            text-align: center;
            padding: 2rem 0;
        }

        .cta-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-onboarding {
            padding: 15px 40px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            text-decoration: none;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #FF6B35 0%, #00C9B1 100%);
            color: white;
            box-shadow: 0 10px 30px rgba(255, 107, 53, 0.3);
        }

            .btn-primary-custom:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 40px rgba(255, 107, 53, 0.4);
                color: white;
            }

        .btn-outline-custom {
            background: transparent;
            border: 2px solid #FF6B35;
            color: #FF6B35;
        }

            .btn-outline-custom:hover {
                background: #FF6B35;
                color: white;
                transform: translateY(-3px);
            }

        /* Animation pour les éléments */
        .wow {
            visibility: hidden;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .onboarding-content {
                padding: 2rem 1.5rem;
            }

            .onboarding-header h1 {
                font-size: 2.2rem;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .step-item {
                flex-direction: column;
                text-align: center;
            }

            .step-number {
                margin-right: 0;
                margin-bottom: 1rem;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn-onboarding {
                width: 100%;
                max-width: 300px;
            }
        }

        /* Background animé */
        .floating-elements {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .floating-element {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }
    </style>
}

<section class="onboarding-section">
    <div class="floating-elements">
        <div class="floating-element" style="width: 100px; height: 100px; top: 10%; left: 10%; animation-delay: 0s;"></div>
        <div class="floating-element" style="width: 150px; height: 150px; top: 60%; left: 80%; animation-delay: 2s;"></div>
        <div class="floating-element" style="width: 80px; height: 80px; top: 80%; left: 20%; animation-delay: 4s;"></div>
        <div class="floating-element" style="width: 120px; height: 120px; top: 30%; left: 70%; animation-delay: 1s;"></div>
    </div>

    <div class="container">
        <div class="onboarding-container wow fadeInUp" data-wow-delay="0.1s">
            <div class="onboarding-content">
                <!-- En-tête -->
                <div class="onboarding-header">
                    <h1>Bienvenue sur Cuisinov</h1>
                    <p>Découvrez une expérience culinaire exceptionnelle avec notre application de restauration d'entreprise</p>
                </div>

                <!-- Grille de fonctionnalités -->
                <div class="features-grid">
                    <div class="feature-card wow fadeInUp" data-wow-delay="0.2s">
                        <div class="feature-icon">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <h3>Menu Varié</h3>
                        <p>Découvrez une large sélection de plats préparés par nos chefs avec des ingrédients frais et de qualité.</p>
                    </div>

                    <div class="feature-card wow fadeInUp" data-wow-delay="0.3s">
                        <div class="feature-icon">
                            <i class="fas fa-bolt"></i>
                        </div>
                        <h3>Commande Rapide</h3>
                        <p>Commandez vos plats préférés en quelques clics et gagnez du temps lors de votre pause déjeuner.</p>
                    </div>

                    <div class="feature-card wow fadeInUp" data-wow-delay="0.4s">
                        <div class="feature-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3>Gain de Temps</h3>
                        <p>Évitez les files d'attente et planifiez vos repas à l'avance pour une journée de travail optimisée.</p>
                    </div>
                </div>

                <!-- Étapes d'utilisation -->
                <div class="onboarding-steps wow fadeInUp" data-wow-delay="0.5s">
                    <h2 class="text-center mb-4" style="color: #2c3e50;">Comment ça marche ?</h2>

                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Parcourir le Menu</h4>
                            <p>Explorez notre carte complète avec des photos appétissantes et des descriptions détaillées.</p>
                        </div>
                    </div>

                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Personnaliser sa Commande</h4>
                            <p>Ajoutez vos préférences alimentaires et personnalisez vos plats selon vos goûts.</p>
                        </div>
                    </div>

                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Payer en Ligne</h4>
                            <p>Réglez facilement votre commande via notre système de paiement sécurisé.</p>
                        </div>
                    </div>

                    <div class="step-item">
                        <div class="step-number">4</div>
                        <div class="step-content">
                            <h4>Récupérer au Restaurant</h4>
                            <p>Votre commande sera prête à l'heure choisie. Plus d'attente, plus de stress !</p>
                        </div>
                    </div>
                </div>

                <!-- Section d'appel à l'action -->
                <div class="cta-section wow fadeInUp" data-wow-delay="0.6s">
                    <h2 class="mb-4" style="color: #2c3e50;">Prêt à commencer ?</h2>
                    <p class="mb-4" style="color: #6c757d; font-size: 1.1rem;">
                        Rejoignez des milliers de collaborateurs qui optimisent déjà leur pause déjeuner avec Cuisinov.
                    </p>
                    <div class="cta-buttons">
                        <a href="/Home/Menu" class="btn-onboarding btn-primary-custom">
                            <i class="fas fa-play-circle me-2"></i>Découvrir le Menu
                        </a>
                        <a href="/Login/Index" class="btn-onboarding btn-outline-custom">
                            <i class="fas fa-user me-2"></i>Se Connecter
                        </a>
                    </div>
                    <p class="mt-3" style="color: #6c757d; font-size: 0.9rem;">
                        Première visite ? <a href="/Login/Register" style="color: #FF6B35; text-decoration: none;">Créer un compte</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialiser les animations
            new WOW().init();

            // Animation pour les éléments flottants
            function createFloatingElement() {
                const element = document.createElement('div');
                element.className = 'floating-element';
                const size = Math.random() * 100 + 50;
                element.style.width = size + 'px';
                element.style.height = size + 'px';
                element.style.top = Math.random() * 100 + '%';
                element.style.left = Math.random() * 100 + '%';
                element.style.animationDelay = Math.random() * 6 + 's';
                document.querySelector('.floating-elements').appendChild(element);
            }

            // Créer plusieurs éléments flottants
            for (let i = 0; i < 8; i++) {
                createFloatingElement();
            }

            // Effet de parallaxe pour le background
            $(window).on('scroll', function() {
                const scrolled = $(window).scrollTop();
                $('.floating-elements').css('transform', `translateY(${scrolled * 0.5}px)`);
            });

            // Animation au chargement de la page
            $('.onboarding-container').css('opacity', '0').animate({
                opacity: 1
            }, 1000);
        });
    </script>
}