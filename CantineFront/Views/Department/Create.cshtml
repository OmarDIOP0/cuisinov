@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/createCategorie.css" />
}

<section class="create-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="create-card">
                    <!-- Header -->
                    <div class="card-header">
                        <h2><i class="fas fa-plus-circle me-2"></i>Créer un Departement</h2>
                        <div class="subtitle">Ajoutez un nouveau dépatement</div>
                    </div>

                    <div class="row g-0">
                        <!-- Form Section -->
                        <div class="col-lg-6">
                            <div class="form-container">
                                <form id="form">
                                    <div class="row g-3">
                                        <!-- Sélection Entreprise -->
                                        <div class="col-12 mb-3">
                                            <div class="form-group">
                                                <label class="form-label" for="EntrepriseId">
                                                    <i class="fas fa-building"></i> Entreprise
                                                </label>
                                                <select class="form-control w-100" name="EntrepriseId" id="EntrepriseId" required> 
                                                    <option disabled selected>Sélectionnez une entreprise</option>
                                                    @if (ViewBag.Entreprises != null)
                                                    {
                                                        foreach (var ent in ViewBag.Entreprises)
                                                        {
                                                            <option value="@ent.Id">@ent.Nom (@ent.Code)</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <!-- Nom du Département -->
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label class="form-label" for="Name">
                                                    <i class="fas fa-tag"></i> Nom du Département
                                                </label>
                                                <input type="text"
                                                       class="form-control"
                                                       id="Name"
                                                       name="Name"
                                                       placeholder="Ex: Informatique Ressources Humaines..."
                                                       required>
                                                <small class="form-text text-muted mt-2">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Choisissez un nom clair et descriptif pour votre département
                                                </small>
                                            </div>
                                        </div>
                                    </div>




                                    <div class="btn-group">
                                        <button class="btn-custom"
                                                id="btnCreate"
                                                type="button"
                                                data-redirectroute="/Department/List"
                                                data-url="/Department/CreateDepartment">
                                            <i class="fas fa-save me-2"></i>Créer un Dépatement
                                        </button>

                                        <button class="btn-back" type="button" onclick="history.back()">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Commands Panel -->
                        <div class="col-lg-6">
                            <div class="commands-panel">
                                <div class="commands-header">
                                    <i class="fas fa-clock me-2"></i>Commandes en Attente
                                </div>
                                <div class="commands-list" id="messagesList">
                                    <!-- Commandes will be loaded here -->
                                    <div class="empty-state">
                                        <i class="fas fa-clock"></i>
                                        <p>Aucune commande en attente</p>
                                        <small class="text-muted">Les nouvelles commandes apparaîtront ici</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            initializeForm();

             $("#image").fileinput({
            showUpload: false,
            ShowCaption: false,
            language: "fr",
            theme: 'fas',
            });
            $(function () {
                GetPendingCommandes();
            })

            // Form submission handler
            $('#btnCreate').on('click', function() {
                submitForm();
            });

            // Enter key support
            $('#Name').on('keypress', function(e) {
                if (e.which === 13) {
                    submitForm();
                }
            });
        });

        function initializeForm() {
            $('#Name').focus();
        }

        function submitForm() {
            const name = $('#Name').val().trim();
            const btn = $('#btnCreate');

            // Validation
            if (!name) {
                ToastR("Veuillez saisir un nom pour la dépatement", "error", 10);
                $('#Name').focus();
                return;
            }

            if (name.length < 2) {
                ToastR("Le nom de la dépatement doit contenir au moins 2 caractères", "error", 10);
                $('#Name').focus();
                return;
            }

            // Prepare data
            const formData = {
                Name: name
            };

            // Show loading state
            btn.addClass('btn-loading').prop('disabled', true);


        }
    </script>
}