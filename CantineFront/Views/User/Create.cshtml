@using CantineFront.ViewModels
@model UserViewModel

@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/createCategorie.css" />
    <link href="~/lib/bootstrap-fileinput/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
}

<section class="create-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="create-card">
                    <!-- Header -->
                    <div class="card-header">
                        <h2><i class="fas fa-user-plus me-2"></i>Créer un Utilisateur</h2>
                        <div class="subtitle">Ajoutez un nouvel utilisateur au système</div>
                    </div>

                    <div class="row g-0">
                        <!-- Form Section -->
                        <div class="col-lg-12">
                            <div class="form-container">
                                <form id="form">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="Login">
                                                    <i class="fas fa-user"></i>Nom d'utilisateur
                                                </label>
                                                <input type="text"
                                                       class="form-control"
                                                       id="Login"
                                                       name="Login"
                                                       placeholder="Ex: cheikhou badji ..."
                                                       required>
                                                <small class="form-text text-muted mt-2">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Choisissez un nom d'utilisateur unique
                                                </small>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="password">
                                                    <i class="fas fa-lock"></i>Mot de passe
                                                </label>
                                                <div class="input-group">
                                                    <input type="password"
                                                           class="form-control"
                                                           id="password"
                                                           name="password"
                                                           placeholder="Créez un mot de passe sécurisé">
                                                    <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                </div>
                                                <small class="form-text text-muted mt-2">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Minimum 8 caractères avec chiffres et lettres
                                                </small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="Telephone">
                                                    <i class="fas fa-phone"></i>Téléphone
                                                </label>
                                                <input type="text"
                                                       class="form-control"
                                                       id="Telephone"
                                                       name="Telephone"
                                                       placeholder=" 77 123 00 00"
                                                       required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="EntrepriseId">
                                                    <i class="fas fa-briefcase"></i>Entreprise
                                                </label>
                                                <select class="form-control nice-select wide"
                                                        name="EntrepriseId"
                                                        id="EntrepriseId"
                                                        required>
                                                    <option disabled selected>
                                                        Sélectionnez une entreprise
                                                    </option>
                                                    @if (Model.Entreprises != null)
                                                    {
                                                        foreach (var item in Model.Entreprises)
                                                        {
                                                            <option value="@item.Id">@item.Nom</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="DepartmentId">
                                                    <i class="fas fa-building"></i>Département
                                                </label>
                                                <select class="form-control nice-select wide"
                                                        name="DepartmentId"
                                                        id="DepartmentId"
                                                        required>
                                                    <option disabled selected>
                                                        Sélectionnez un département
                                                    </option>
                                                    @if (Model.Departments != null)
                                                    {
                                                        foreach (var item in Model.Departments)
                                                        {
                                                            <option value="@item.Id">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="Profile">
                                                    <i class="fas fa-user-tag"></i>Profil
                                                </label>
                                                <select class="form-control nice-select wide"
                                                        name="Profile"
                                                        id="Profile"
                                                        required>
                                                    <option disabled selected>
                                                        Sélectionnez un profil
                                                    </option>
                                                    <option value="USER">USER</option>
                                                    <option value="GERANT">GERANT</option>
                                                    <option value="ADMIN">ADMIN</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    @* 
                                    <div class="col-md-12"> *@
                                        <div class="form-group">
                                            <label class="form-label" for="Email">
                                                <i class="fas fa-envelope"></i>Email
                                            </label>
                                            <input type="email"
                                                   class="form-control"
                                                   id="Email"
                                                   name="Email"
                                                   placeholder="cheikhou@entreprise.com">
                                        </div>
                                    @* </div> *@

                                    <div class="btn-group">
                                        <button class="btn-custom"
                                                id="btnCreate"
                                                type="button"
                                                data-redirectroute="/User/List"
                                                data-url="/User/CreateUser">
                                            <i class="fas fa-save me-2"></i>Créer l'Utilisateur
                                        </button>

                                        <button class="btn-back" type="button" onclick="history.back()">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            // Toggle password visibility
            $('#togglePassword').click(function() {
                const passwordInput = $('#password');
                const type = passwordInput.attr('type') === 'password' ? 'text' : 'password';
                passwordInput.attr('type', type);
                $(this).find('i').toggleClass('fa-eye fa-eye-slash');
            });

            // Form validation
            $('#form').validate({
                rules: {
                    Login: { required: true },
                    Telephone: { required: true },
                    DepartmentId: { required: true },
                    Profile: { required: true },
                    password: { required: true, minlength: 8 }
                },
                messages: {
                    password: {
                        minlength: "Le mot de passe doit contenir au moins 8 caractères"
                    }
                }
            });

            // Enter key support
            $('#Login').on('keypress', function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    $('#btnCreate').click();
                }
            });
        });

        function initializeForm() {
            $('#Login').focus();
        }
    </script>
}