@model CantineFront.ViewModels.UserViewModel

@section Styles {
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/createCategorie.css" />
    <link href="~/lib/bootstrap-fileinput/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
}

@{
    string actif = (Model.User?.Actif ?? false) ? "checked" : "";
    string isInterimEmployee = (Model.User?.IsInterimEmployee ?? false) ? "checked" : "";
}

<section class="create-section">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="create-card">
                    <!-- Header -->
                    <div class="card-header">
                        <h2><i class="fas fa-edit me-2"></i>Modifier l'Utilisateur</h2>
                        <div class="subtitle">Modifiez les informations de l'utilisateur</div>
                    </div>

                    <div class="row g-0">
                        <!-- Form Section -->
                        <div class="col-lg-12">
                            <div class="form-container">
                                <form id="form">
                                    <input type="hidden" name="Id" value="@Model.User.Id" />

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="Login">
                                                    <i class="fas fa-user"></i>Nom d'utilisateur
                                                </label>
                                                <input type="text"
                                                       class="form-control"
                                                       id="Login"
                                                       name="Login"
                                                       placeholder="Ex: john.doe, marie.dupont..."
                                                       value="@Model.User.Login"
                                                       required>
                                                <small class="form-text text-muted mt-2">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Nom d'utilisateur unique pour la connexion
                                                </small>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="Email">
                                                    <i class="fas fa-envelope"></i>Email
                                                </label>
                                                <input type="email"
                                                       class="form-control"
                                                       id="Email"
                                                       name="Email"
                                                       placeholder="exemple@entreprise.com"
                                                       value="@Model.User.Email">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="Telephone">
                                                    <i class="fas fa-phone"></i>Téléphone
                                                </label>
                                                <input type="text"
                                                       class="form-control"
                                                       id="Telephone"
                                                       name="Telephone"
                                                       placeholder="+33 1 23 45 67 89"
                                                       value="@Model.User.Telephone"
                                                       required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="EntrepriseId">
                                                    <i class="fas fa-briefcase"></i>Entreprise
                                                </label>
                                                <select class="form-control nice-select wide"
                                                        name="EntrepriseId"
                                                        id="EntrepriseId"
                                                        required>
                                                    <option disabled selected>
                                                        Sélectionnez une entreprise
                                                    </option>
                                                    @if (Model.Entreprises != null)
                                                    {
                                                        foreach (var item in Model.Entreprises)
                                                        {
                                                            bool selected = item.Id == Model.User.EntrepriseId;
                                                            <option value="@item.Id" selected="@(selected ? "selected" : null)">@item.Nom</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="DepartmentId">
                                                    <i class="fas fa-building"></i>Département
                                                </label>
                                                <select class="form-control nice-select wide"
                                                        name="DepartmentId"
                                                        id="DepartmentId">
                                                    <option disabled>
                                                        Sélectionnez un département
                                                    </option>
                                                    @if (Model.Departments != null)
                                                    {
                                                        foreach (var item in Model.Departments)
                                                        {
                                                            bool selected = item.Id == Model.User.DepartmentId;
                                                            <option value="@item.Id" selected="@(selected ? "selected" : null)">@item.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-label" for="Profile">
                                                    <i class="fas fa-user-tag"></i>Profil
                                                </label>
                                                <select class="form-control nice-select wide"
                                                        name="Profile"
                                                        id="Profile">
                                                    <option disabled>
                                                        Sélectionnez un profil
                                                    </option>
                                                    @{
                                                        var s1 = Model.User.Profile == "USER";
                                                        var s2 = Model.User.Profile == "GERANT";
                                                        var s3 = Model.User.Profile == "ADMIN";
                                                    }
                                                    <option value="USER" selected="@(s1 ? "selected" : null)">USER</option>
                                                    <option value="GERANT" selected="@(s2 ? "selected" : null)">GERANT</option>
                                                    <option value="ADMIN" selected="@(s3 ? "selected" : null)">ADMIN</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-check mt-3">
                                        <input type="checkbox"
                                               class="form-check-input"
                                               id="actif"
                                               name="Actif"
                                               @actif>
                                        <label class="form-check-label" for="actif">
                                            <i class="fas fa-check-circle me-2"></i>
                                            Utilisateur actif
                                        </label>
                                    </div>

                                    <div class="btn-group mb-3 mt-3">
                                        <button class="btn-custom"
                                                id="btnUpdate"
                                                type="button"
                                                data-redirectroute="/User/List"
                                                data-url="/User/UpdateUser">
                                            <i class="fas fa-save me-2"></i>Modifier l'Utilisateur
                                        </button>

                                        <button class="btn-back" type="button" onclick="history.back()">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            // Form validation
            $('#form').validate({
                rules: {
                    Login: { required: true },
                    Telephone: { required: true },
                    EntrepriseId: { required: true }
                }
            });

            // Enter key support
            $('#Login').on('keypress', function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    $('#btnUpdate').click();
                }
            });
        });

        function initializeForm() {
            $('#Login').focus();
        }
    </script>
}